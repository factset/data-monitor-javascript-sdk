{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist/lib-modules",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["dom", "es2018", "scripthost"],
    "inlineSources": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true
  }
}
